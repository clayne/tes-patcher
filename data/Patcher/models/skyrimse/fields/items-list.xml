<field>
	<name>Items</name>
  <list>true</list>
  <group>
    <name>Ingredient</name>
    <fields>
      <field>
        <key>CNTO</key>
        <name>Item</name>
        <display-name>Input Item</display-name>
        <struct>
          <name>IngredientItem</name>
          <members>
            <member>
              <name>Item</name>
              <display-name>Item ID</display-name>
              <type>uint</type>
              <as>
                <!-- ... the form ID for an "input item" can be one of these four types.-->
                <type>ref(ALCH|INGR|WEAP|MISC|ARMO)</type>
              </as>
            </member>
            <uint name="Count" display-name="Input Count" />
          </members>
        </struct>
      </field>
      <field>
        <key>COED</key>
        <name>ExtraData</name>
        <display-name>Extra Data</display-name>
        <struct>
          <name>IngredientExtraData</name>
          <members>
            <member>
              <name>Owner</name>
              <type>uint</type>
              <as>
                <type>ref(FACT|NPC_)</type>
              </as>
            </member>
            <uint name="Value" />
            <float name="ItemCondition" display-name="Item Condition" />
          </members>
        </struct>
      </field>
    </fields>
  </group>
</field>
