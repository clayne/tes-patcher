<record>
  <name>GlobalVariable</name>
  <display-name>Global Variable</display-name>
  <fields>
    <editor-id />
    <field>
      <key>FNAM</key>
      <name>Type</name>
      <struct>
        <name>Type</name>
        <members>
          <global-type-enum />
        </members>
      </struct>
    </field>
    <field>
      <key>FLTV</key>
      <name>Value</name>
      <type>float</type>
      <as>
        <!-- This structure indicates that this value can be one of several different primitive types, int, long, or float. -->
        <union>
          <name>GlobalVariableValue</name>
          <members>
            <int name="Integer" />
            <long name="LongInteger" />
            <float name="Float" />
          </members>
        </union>
      </as>
    </field>
  </fields>
</record>
