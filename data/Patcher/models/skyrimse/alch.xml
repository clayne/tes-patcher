<record>
  <name>Potion</name>
  <display-name>Potions and Food Items</display-name>
  <fields>
    <editor-id />
    <object-bounds />
    <full-name />
    <keyword-list />
    <description />
    <models />
    <pickup-sound />
    <drop-sound />
    <equipment-type />
    <float key="DATA" name="Weight" />
    <field>
      <key>ENIT</key>
      <struct>
        <name>PotionMisc</name>
        <members>
          <uint name="Value" />
          <potion-flags name="Flags" />
          <uint name="Addiction" hidden="true" />
          <float name="AddictionChance" display-name="Addiction Chance" />
          <sound name="UseSound" display-name="Use Sound" />
        </members>
      </struct>
    </field>
    <field>
      <name>Effects</name>
      <display-name>Potion Effects</display-name>
      <list>true</list>
      <group>
        <name>PotionEffect</name>
        <fields>
          <magic-effect key="EFID" name="BaseEffect" display-name="Base Effect"/>
          <field>
            <key>EFIT</key>
            <struct>
              <name>PotionEffectData</name>
              <members>
                <float name="Magnitude" />
                <uint name="Area" />
                <uint name="Duration" />
              </members>
            </struct>
          </field>
          <condition-list />
        </fields>
      </group>
    </field>
  </fields>
</record>
