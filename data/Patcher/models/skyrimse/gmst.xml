<record>
  <name>GameSetting</name>
  <display-name>Game Setting</display-name>
  <fields>
    <editor-id />
    <field>
      <key>DATA</key>
      <name>Value</name>
      <type>uint</type>
      <as>
        <!-- This structure indicates that this value can be one of several different primitive types -->
        <union>
          <name>GameSettingValue</name>
          <members>
            <bool name="Boolean" display-name="True/False" />
            <uint name="Integer" display-name="Integer" />
            <float name="Float" display-name="Float" />
            <lstring name="String" display-name="Name" />
          </members>
        </union>
      </as>
    </field>
  </fields>
</record>
